<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppAntikhovitch.View.IntegralCalculationPage">
    <Grid RowDefinitions="Auto,*,Auto">
        <Label x:Name="statusLabel" Text="Welcome to .NET MAUI!" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0"/>
        <StackLayout Grid.Row = "1" Orientation="Horizontal" Margin="5" Spacing="5">
            <ProgressBar x:Name="progressBar" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
            <Label x:Name = "calculateLabel" Text = "0%" HorizontalOptions="End" VerticalOptions="Center"/>
        </StackLayout>
        <StackLayout Grid.Row="2" Orientation="Horizontal" HorizontalOptions="Center" VerticalOptions="Center" Margin="5" Spacing="5">
            <Button x:Name="cancelButton" Text="Cancel" Clicked="CancelButton_Clicked" IsEnabled="False" />
            <Button x:Name="startButton" Text="Start" Clicked="StartButton_Clicked"/>
        </StackLayout>
    </Grid>
</ContentPage>
